<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sbs.cwy.at.dao.ArticleDao">
	<select id="getForPrintArticles" resultType="Article">
		SELECT *
		FROM article
		WHERE displayStatus = 1
		ORDER BY id DESC
	</select>

	<select id="getForPrintArticleById" resultType="Article">
		SELECT *
		FROM
		article
		WHERE id = #{id}
	</select>

	<select id="getArticleById" resultType="Article">
		SELECT *
		FROM
		article
		WHERE
		id = #{id}
	</select>

	<select id="getBoardByCode" resultType="Board">
		SELECT *
		FROM
		board
		WHERE
		`code` = #{code}
	</select>

	<insert id="write" useGeneratedKeys="true" keyProperty="id">
		INSERT
		INTO article
		SET regDate = NOW(),
		updateDate = NOW(),
		title = #{title},
		body = #{body},
		memberId = #{memberId},
		boardId = #{boardId}
	</insert>

	<update id="modify">
		UPDATE article
		<set>
			updateDate = NOW(),
			<if test="title != null">title = #{title},</if>
			<if test="body != null">body = #{body},</if>
		</set>
		WHERE id = #{id}
	</update>

</mapper>